" no backup files
set nowritebackup
set nobackup
set noswapfile

" multibyte char display
set ambiwidth=double

" wildmenu
set wildmenu

" search
set wrapscan
set incsearch
set hlsearch


" display
set showmatch matchtime=1
set laststatus=2
set expandtab
set shiftwidth=2
set softtabstop=2
set tabstop=2
set smartindent
set title
set number
highlight LineNr
ctermfg=DarkGray
syntax on

" key input
set whichwrap=b,s,h,l,<,>,[,],~
set backspace=indent,eol,start
set virtualedit=block
